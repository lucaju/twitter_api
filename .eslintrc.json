{
    "ecmaFeatures": {
        "modules": true
      },
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "rules": {
        "indent": ["2","tab"],
        "no-underscore-dangle": 0,
        "no-multi-spaces": 0,
        "no-trailing-spaces": 0,
        "quotes": [2, "single"],
        "no-console": "off",
        "no-unused-vars": 2
    }
}